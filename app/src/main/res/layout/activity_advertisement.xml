<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdvertisementActivity">

    <TextView
        android:id="@+id/Text_view_data"
        android:layout_width="400dp"
        android:layout_height="480dp"
        android:hint="data"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="1000"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <ToggleButton
        android:id="@+id/Toggle_btn_scan"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:checked="false"
        android:onClick="onToggleScan"
        android:textOff="START\nSCAN"
        android:textOn="STOP\nSCAN"
        android:textSize="22dp"
        android:textStyle="bold"
        android:background="@drawable/scan_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <ToggleButton
        android:id="@+id/Toggle_btn_delete"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:checked="false"
        android:onClick="onToggleDelete"
        android:textOff="delete"
        android:textOn="X"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <android.widget.Button
        android:id="@+id/Btn_send_data"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:checked="false"
        android:onClick="onSendData"
        android:text="SEND\nDATA"
        android:textSize="22dp"
        android:textStyle="bold"
        android:background="#C2B4D6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <android.widget.Button
        android:id="@+id/Btn_delete_all"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:checked="false"
        android:onClick="onDeleteAll"
        android:text="all"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="visible"
        android:background="#333D51"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.820" />

    <android.widget.Button
        android:id="@+id/Btn_delete_latest_value"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:checked="false"
        android:onClick="onDeleteLatest"
        android:text="last"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="visible"
        android:background="#57648C"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.820" />

    <Button
        android:id="@+id/Btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <Button
        android:id="@+id/Btn_scan_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:textSize="18dp"
        android:textStyle="bold"
        android:onClick="onLocation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <Switch
        android:id="@+id/Switch_directly_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIRECTY SEND"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TableLayout
        android:layout_width="360dp"
        android:layout_height="66dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <TableRow
            android:background="@android:color/background_dark"
            android:gravity="center">

            <TextView
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:layout_margin="1dp"
                android:background="#C8C8C8"
                android:gravity="center"
                android:text="조\\센서"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="#C8C8C8"
                android:gravity="center"
                android:text="1조"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="#C8C8C8"
                android:gravity="center"
                android:text="2조"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="#C8C8C8"
                android:gravity="center"
                android:text="3조"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="#C8C8C8"
                android:gravity="center"
                android:text="4조"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="#C8C8C8"
                android:gravity="center"
                android:text="5조"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </TableRow>

        <TableRow
            android:background="@android:color/background_dark"
            android:gravity="center">

            <TextView
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:layout_margin="1dp"
                android:background="#C8C8C8"
                android:gravity="center"
                android:text="2조"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/Text_1jo"
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="null"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/Text_2jo"
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="null"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/Text_3jo"
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="null"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/Text_4jo"
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="null"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/Text_5jo"
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="null"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>